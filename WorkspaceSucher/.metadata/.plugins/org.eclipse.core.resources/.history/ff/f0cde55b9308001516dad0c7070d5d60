package story;

import java.awt.Font;
import java.awt.Graphics;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.awt.image.BufferedImage;

import javax.swing.JFrame;
import javax.swing.JPanel;

@SuppressWarnings("serial")
public class Shop extends JFrame implements KeyListener {

	private static int width = 200;
	private static int height = 80;

	private Screen screen;
	private BufferedImage backimage;
	private Font font;
	private Seeker player;
	private int insetLeft;
	private int insetTop;

	Shop(Seeker player,BufferedImage backimage) {

		super("Shop");

		this.player = player;
		this.setBackimage(backimage);
		setResizable(false);
		setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		addKeyListener(this);

		screen = new Screen();
		add(screen);

		pack();
		insetLeft = getInsets().left;
		insetTop = getInsets().top;
		setSize(width + insetLeft + getInsets().right, height
				+ getInsets().bottom + insetTop);
		setLocationRelativeTo(null);
		setVisible(true);

		font = new Font("SansSerif", 0, 12);

	}

	public class Screen extends JPanel

	{
		@Override
		public void paintComponent(Graphics g) {
			g.setFont(font);
			g.drawString(" Your E: " + player.getEsenco(), 10, 20);
			g.drawString(" 'O' for STR (costs 15E) " + player.getStr(), 10, 40);
			g.drawString(" 'L' for KON (costs 15E) " + player.getCon(), 10, 60);
		}
	}

	public static int getScreenWidth() {
		return width;
	}

	public static int getScreenHeight() {
		return width;
	}

	@Override
	public void keyPressed(KeyEvent arg0) {
		// TODO Auto-generated method stub

	}

	@Override
	public void keyReleased(KeyEvent e) {
		
		if (e.getKeyCode() == KeyEvent.VK_O && player.getEsenco() >= 15) {
			player.setStr(player.getStr() + 1);
			player.setEsenco(player.getEsenco() - 15);
			player.update();
			repaint();
			
		}

		if (e.getKeyCode() == KeyEvent.VK_L && player.getEsenco() >= 15) {
			player.setCon(player.getCon() + 1);
			player.setEsenco(player.getEsenco() - 15);
			player.update();
			repaint();
		}

	}

	@Override
	public void keyTyped(KeyEvent arg0) {
		// TODO Auto-generated method stub

	}

	public BufferedImage getBackimage() {
		return backimage;
	}

	public void setBackimage(BufferedImage backimage) {
		this.backimage = backimage;
	}

}

